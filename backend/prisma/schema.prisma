generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  password  String
  otp       String?
  otpExpiry DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  expenses Expense[]
  incomes  Income[]
}

model TempUser {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  otp       String
  otpExpiry DateTime
}

model Income {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  category    String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Expense {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  category    String
  description String // optional: e.g., "Netflix subscription"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
